    <model name="lego_yellow">
      <pose>0.35 -0.1 0.82 0 0 0.2</pose>
      <link name="link">
        <inertial>
            <mass>0.01</mass>
            <inertia><ixx>0.00001</ixx><iyy>0.00001</iyy><izz>0.00001</izz></inertia>
        </inertial>
        <collision name="collision">
          <geometry>
            <box><size>0.032 0.032 0.02</size></box>
          </geometry>
        </collision>
        <visual name="base_visual">
          <geometry>
            <box><size>0.032 0.032 0.02</size></box>
          </geometry>
          <material>
