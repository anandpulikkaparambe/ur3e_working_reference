        </visual>
        <!-- Studs -->
        <visual name="stud1"><pose>0.008 0.008 0.012 0 0 0</pose><geometry><cylinder><radius>0.0024</radius><length>0.004</length></cylinder></geometry><material><ambient>1 1 0 1</ambient><diffuse>1 1 0 1</diffuse></material></visual>
        <visual name="stud2"><pose>0.008 -0.008 0.012 0 0 0</pose><geometry><cylinder><radius>0.0024</radius><length>0.004</length></cylinder></geometry><material><ambient>1 1 0 1</ambient><diffuse>1 1 0 1</diffuse></material></visual>
        <visual name="stud3"><pose>-0.008 0.008 0.012 0 0 0</pose><geometry><cylinder><radius>0.0024</radius><length>0.004</length></cylinder></geometry><material><ambient>1 1 0 1</ambient><diffuse>1 1 0 1</diffuse></material></visual>
        <visual name="stud4"><pose>-0.008 -0.008 0.012 0 0 0</pose><geometry><cylinder><radius>0.0024</radius><length>0.004</length></cylinder></geometry><material><ambient>1 1 0 1</ambient><diffuse>1 1 0 1</diffuse></material></visual>
      </link>
